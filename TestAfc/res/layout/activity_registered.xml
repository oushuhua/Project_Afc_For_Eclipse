<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_line">

    <include android:id="@+id/top_titlebar" layout="@layout/titlebar" />

    <EditText
        android:id="@+id/register_edittext"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:hint="请输入您的手机号码"
        android:textColor="#333333"
        android:textSize="@dimen/textsize_30px"
        android:numeric="integer"
        android:maxLength="11"
        android:layout_below="@+id/top_titlebar"
        android:background="#fff"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#e9f6ff"
        android:textColor="#1a9cf2"
        android:text=""
        android:gravity="center"
        android:textSize="@dimen/textsize_58px"
        android:visibility="gone"
        android:layout_below="@+id/register_edittext"
        android:id="@+id/according_textView" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#858585"
        android:textSize="@dimen/textsize_28px"
        android:text="我已经阅读并同意"
        android:layout_below="@+id/according_textView"
        android:layout_alignLeft="@+id/change_btn"
        android:layout_alignStart="@+id/change_btn"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="15dp"
        android:id="@+id/textView2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_main"
        android:textSize="@dimen/textsize_28px"
        android:text="使用条款和隐私政策"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <Button
        android:id="@+id/register_next_btn"
        style="@style/bg_text_style_16sp_bai_new"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="47dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/sl_bt_nor_infor"
        android:text="下一步"
        android:layout_below="@+id/according_textView"
        android:layout_centerHorizontal="true" />



</RelativeLayout>