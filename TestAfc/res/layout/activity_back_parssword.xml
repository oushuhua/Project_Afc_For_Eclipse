<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_line">

    <include android:id="@+id/top_titlebar" layout="@layout/titlebar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textColor="#858585"
        android:text="请输入手机您的手机号"
        android:gravity="center|left"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/textsize_28px"
        android:layout_below="@+id/top_titlebar"
        android:id="@+id/textView" />

    <EditText
        android:id="@+id/back_edittext"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:padding="10dp"
        android:hint="15992755002"
        android:textColor="#333333"
        android:textSize="@dimen/textsize_24px"
        android:layout_below="@+id/textView"
        android:background="#fff"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#e9f6ff"
        android:textColor="#1a9cf2"
        android:text=""
        android:gravity="center"
        android:textSize="@dimen/textsize_58px"
        android:visibility="gone"
        android:layout_below="@+id/back_edittext"
        android:id="@+id/accrding_TextView" />
    <Button
        android:id="@+id/back_btn"
        style="@style/bg_text_style_16sp_bai_new"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/sl_bt_nor_infor"
        android:text="下一步"
        android:layout_below="@+id/accrding_TextView"
        android:layout_centerHorizontal="true" />
</RelativeLayout>