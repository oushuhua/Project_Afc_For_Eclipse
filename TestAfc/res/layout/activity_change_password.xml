<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_line">
    <include android:id="@+id/top_titlebar" layout="@layout/titlebar" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="请输入原始密码"
        android:textSize="@dimen/textsize_30px"
        android:padding="10dp"
        android:textColor="#858585"
        android:background="@drawable/sl_nor_info_whith"
        android:id="@+id/original_password"
        android:layout_below="@+id/top_titlebar"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="请输入确认密码"
        android:textSize="@dimen/textsize_30px"
        android:padding="10dp"
        android:textColor="#858585"
        android:background="@drawable/sl_nor_info_whith"
        android:id="@+id/original_password_next"
        android:layout_below="@+id/original_password"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="请再次输入确认密码"
        android:textSize="@dimen/textsize_30px"
        android:padding="10dp"
        android:textColor="#858585"
        android:background="@drawable/sl_nor_info_whith"
        android:id="@+id/true_password"
        android:layout_below="@+id/original_password_next"
        android:layout_marginTop="10dp" />


    <Button
        android:id="@+id/change_btn"
        style="@style/bg_text_style_16sp_bai_new"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/sl_bt_nor_infor"
        android:text="确认修改"
        android:layout_below="@+id/true_password"
        android:layout_centerHorizontal="true" />

</RelativeLayout>