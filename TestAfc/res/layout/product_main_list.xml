<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text=""
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:maxWidth="300dp"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/textsize_32px"
        android:textColor="#333333"
        android:id="@+id/product_main_title" />
    
    <ImageView
        android:id="@+id/product_main_collection"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@mipmap/product_collection"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/prouct_main_fenpei"
        android:text="已分配"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:textColor="#666666"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/textsize_28px"/>

    <View
        android:id="@+id/product_main_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/product_main_title"
        android:background="@color/color_line"/>

    <RelativeLayout
        android:id="@+id/product_main_list_Rela"
        android:layout_width="match_parent"
        android:layout_below="@+id/product_main_view"
        android:layout_height="109dp">

        <TextView
            android:id="@+id/product_main_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="规模"
            android:textColor="#666666"
            android:textSize="@dimen/textsize_24px"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="14dp" />

        <TextView
            android:id="@+id/product_main_monery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8070万"
            android:textColor="#ffa200"
            android:textSize="@dimen/textsize_36px"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/product_main_size"
            android:layout_alignLeft="@+id/product_main_size"
            android:layout_alignStart="@+id/product_main_size" />
        
        <TextView
            android:id="@+id/product_main_catrgory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类别:挂牌后定增"
            android:textColor="#666666"
            android:textSize="@dimen/textsize_28px"
            android:layout_below="@+id/product_main_monery"
            android:layout_alignLeft="@+id/product_main_monery"
            android:layout_alignStart="@+id/product_main_monery"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/product_main_limt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="期限"
            android:textColor="#666666"
            android:textSize="@dimen/textsize_24px"
            android:layout_alignTop="@+id/product_main_size"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3个月"
            android:textColor="#ffa200"
            android:textSize="@dimen/textsize_36px"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/product_main_limt"
            android:layout_alignLeft="@+id/product_main_limt"
            android:layout_alignStart="@+id/product_main_limt"
            android:id="@+id/product_main_times" />

        <TextView
            android:id="@+id/product_main_profit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收益:固定+浮动"
            android:textColor="#666666"
            android:textSize="@dimen/textsize_28px"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/product_main_times"
            android:layout_alignLeft="@+id/product_main_times"
            android:layout_alignStart="@+id/product_main_times" />



        <TextView
            android:id="@+id/product_main_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="期限"
            android:textColor="#666666"
            android:visibility="gone"
            android:textSize="@dimen/textsize_24px"
            android:layout_alignTop="@+id/product_main_limt"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3个月"
            android:textColor="#ffa200"
            android:textSize="@dimen/textsize_36px"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:layout_below="@+id/product_main_right"
            android:layout_alignLeft="@+id/product_main_right"
            android:layout_alignStart="@+id/product_main_right"
            android:id="@+id/product_main_right_time" />

        <ImageView
            android:id="@+id/product_main_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/product_pjone"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="10dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_line"
        android:layout_below="@+id/product_main_list_Rela"/>

</RelativeLayout>