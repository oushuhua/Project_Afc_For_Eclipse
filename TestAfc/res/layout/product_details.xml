<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_line">

    <include android:id="@+id/top_titlebar" layout="@layout/titlebar" />

    <LinearLayout
        android:id="@+id/pro_etails_Lin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/pro_etails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="产品详情"
            android:textColor="@color/color_main"
            android:textSize="@dimen/textsize_28px" />

        <TextView
            android:id="@+id/pro_etails_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="产品资料"
            android:textColor="#333333"
            android:textSize="@dimen/textsize_28px" />
        <TextView
            android:id="@+id/pro_etails_enterprise"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="企业面对面"
            android:textColor="#333333"
            android:textSize="@dimen/textsize_28px" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:orientation="horizontal">
        <View
            android:id="@+id/cursor"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/color_main" />
        <View
            android:id="@+id/cursor1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="#fff" />
        <View
            android:id="@+id/cursor2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="#fff" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/product_Details_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:flipInterval="30"
        android:layout_marginTop="10dp"
        android:persistentDrawingCache="animation" />
</LinearLayout>